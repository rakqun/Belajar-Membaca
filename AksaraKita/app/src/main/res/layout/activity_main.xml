<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_anak"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnAbjad"
            android:layout_marginEnd="5dp"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/abjad"/>

        <ImageView
            android:id="@+id/btnObjek"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/objek"/>

        <ImageView
            android:id="@+id/btnBermain"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/bermain"/>

        <ImageView
            android:id="@+id/btnMembaca"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/membaca"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>