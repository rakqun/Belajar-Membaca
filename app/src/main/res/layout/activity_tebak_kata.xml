<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bermain"
    tools:context=".bermain.TebakKataActivity">

    <ImageView
        android:id="@+id/btnHomeTebak"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/home"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btnBackTebak"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/back_btn"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/tvTebak"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gajah"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="54sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tebak Kata dari suara yang muncul"
            android:textAlignment="center"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/kata1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gajah"
                android:textSize="25sp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/kata2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="beruang"
                android:textSize="25sp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/kata3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kucing"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/kata4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ayam"
                android:textSize="25sp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>