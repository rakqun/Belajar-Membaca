<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_awal"
    tools:context=".huruf.TigaKataActivity">

    <ImageView
        android:id="@+id/btnHomeTigaSuku"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/home"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btnBackTigaSuku"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/back_btn"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/imgFrame"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:gravity="center_vertical"
        android:background="@drawable/frame_book"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp">

            <TextView
                android:id="@+id/tvKata1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="ba"
                android:layout_margin="10dp"
                android:textSize="150sp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:fontFamily="@font/lilitaone_regular"/>

            <TextView
                android:id="@+id/tvKata2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="10dp"
                android:text="li"
                android:textSize="150sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:visibility="invisible"
                android:textAllCaps="true"
                android:fontFamily="@font/lilitaone_regular"/>

            <TextView
                android:id="@+id/tvKata3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="10dp"
                android:text="ta"
                android:textSize="150sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:visibility="invisible"
                android:textAllCaps="true"
                android:fontFamily="@font/lilitaone_regular"/>

        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/next"
        android:layout_marginStart="-20dp"
        app:layout_constraintStart_toEndOf="@id/imgFrame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/back"
        android:layout_marginEnd="-20dp"
        app:layout_constraintEnd_toStartOf="@id/imgFrame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>